//正误判断，给反馈

<text correct>
	/items = ("√")
	/fontstyle = ("Arial", 10%)
	/txbgcolor = (transparent)
	/txcolor = (255,255,255)
</text>


<text error>
	/items = ("×")
	/fontstyle = ("Arial", 10%)
	/txbgcolor = (transparent)
	/txcolor = (255,255,255)
</text>


<trial trial1>
	/correctmessage = (correctmsg,500)
	/errormessage = (errormsg,500)
	/pretrialpause = 500
	/validresponse = (s1,o2,o3,o4)
	/correctresponse = (s1)
	/stimulusframes = [1 = fixation; 100 = cover,s1,o2,o3,o4]
</trial>


<trial trial2>
	/correctmessage = (correctmsg,500)
	/errormessage = (errormsg,500)
	/pretrialpause = 500
	/validresponse = (o1,s2,o3,o4)
	/correctresponse = (s2)
	/stimulusframes = [1 = fixation; 100 = cover,o1,s2,o3,o4]
</trial>


<trial trial3>
	/correctmessage = (correctmsg,500)
	/errormessage = (errormsg,500)
	/pretrialpause = 500
	/validresponse = (o1,o2,s3,o4)
	/correctresponse = (s3)
	/stimulusframes = [1 = fixation; 100 = cover,o1,o2,s3,o4]
</trial>


<trial trial4>
	/correctmessage = (correctmsg,500)
	/errormessage = (errormsg,500)
	/pretrialpause = 500
	/validresponse = (o1,o2,o3,s4)
	/correctresponse = (s4)
	/stimulusframes = [1 = fixation; 100 = cover,o1,o2,o3,s4]
</trial>


<block all>
	/screencolor = (0,0,0)
	/blockfeedback = (meanlatency,correct)
	/trials = [1-20 = noreplace(trial1, trial2,trial3,trial4)]
</block>


<expt>
	/preinstructions = (instruction)
	/ blocks = [1 = all]
</expt>


<defaults>
	/inputdevice = mouse
</defaults>
